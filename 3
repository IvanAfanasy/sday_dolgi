#include <iostream>

using std::cout;
using std::endl;
/*
2 2 5 1
7 8 4 2
6 7 9 0
*/

void print_as_2d(const int a[], const int N, const int row_size){
    for(int k = 0; k < N; ++k){
        cout << a[k];
        if (k % row_size == row_size-1)
            cout << "\n";
        else
            cout << "  "; 
    }
    cout << "\n";
}
void demo_1(){
    int a[] = {1, 2, 3 ,5 ,5 ,6 ,7 ,8 ,9, 0, 4 ,1 ,6 ,7 ,2, 4};
    const int total = sizeof(a)/sizeof(a[0]);
    print_as_2d(a, total, 4);
}
int main(){
    demo_1();
    return 0;
}
