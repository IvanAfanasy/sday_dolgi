#include <iostream>
using std::cout;
using std::endl;

void print_even(const int a[], const int N){
    for(int k = 0; k < N; ++k){
        if ((a[k] & 1) == 0) //взятие адреса
            cout << a[k] << endl;
    }
}
void demo_1(){
    int a[] = {321, 543, 624, 6162 ,798, 564789, 882, 1, -34, 523};
    const int total = sizeof(a)/sizeof(a[0]);
    print_even(a, total);
}
int main(){
    demo_1();
    return 0;
}
